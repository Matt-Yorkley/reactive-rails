= form_for [:admin, @course] do |f|
  - if @course.errors.any?
    #error_explanation
      %h2= "#{pluralize(@course.errors.count, "error")} prohibited this course from being saved:"
      %ul
        - @course.errors.full_messages.each do |message|
          %li= message

  .field
    = f.label :title
    = f.text_field :title
  .field
    = f.label :description
    = f.text_area :description
  .field
    = f.label :starts
    = f.date_select :starts
  .field
    = f.label :ends
    = f.date_select :ends
  .field
    = f.label :status
    = f.text_field :status
  .actions
    = f.submit 'Save'
