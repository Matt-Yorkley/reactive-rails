.level.title-bar
  .level-left
    .level-item
      %h2.title.is-4
        Messages >
        = @user.username

.section.box.has-background-light
  .container
    = render "form"

    %br

    #conversation
      - if @messages.count.positive?
        - @messages.each do |message|
          = render partial: 'shared/message', locals: { message: message }
      - else
        %p.subtitle
          No messages exist yet. Try sending one!
