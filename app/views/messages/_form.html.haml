  = hidden_field_tag "message[receiver_id]", params[:user_id]
  .field
    = f.label :content, 'Message', class: 'label'
    = f.text_area :content, class: 'textarea'
  .actions.buttons
    %a.button.is-success{ data: { reflex: 'click->MessageReflex#create' } }
