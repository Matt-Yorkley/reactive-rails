- link = pagy_link_proc(pagy)

%nav.pagination.is-centered{:role => "navigation", "aria-label" => "pagination"}
  %ul.pagination-list
    %li
      - if pagy.prev
        %a.pagination-previous{ data: { reflex: 'click->PagyReflex#page', page: pagy.prev } }
          != pagy_t('pagy.nav.prev')
      - else
        %a.pagination-previous{:disabled => "disabled"}!= pagy_t('pagy.nav.prev')

    - pagy.series.each do |item|                      # series example: [1, :gap, 7, 8, "9", 10, 11, :gap, 36]
      - if item.is_a?(Integer)                        # page link
        %li
          %a.pagination-link{ data: { reflex: 'click->PagyReflex#page', page: item } }= item

      - elsif item.is_a?(String)                      # current page
        %li
          %a.pagination-link.is-current= item

      - elsif item == :gap                            # page gap
        %li
          %span.pagination-ellipsis!= pagy_t('pagy.nav.gap')

    %li
      - if pagy.next
        %a.pagination-previous{ data: { reflex: 'click->PagyReflex#page', page: pagy.next } }
          != pagy_t('pagy.nav.next')
      - else
        %a.pagination-next{:disabled => "disabled"}!= pagy_t('pagy.nav.next')
